<!--index.wxml-->
<view class="container">
  <header class="container-nav" backgroundColor="#E3FBF7" title="我的" returnable="{{false}}"
          titleColor="#2B2B2B"></header>
  <view class="container-content">
    <view class="people-area">
      <image class="people-image default-pic" src="{{userPic}}"></image>
      <view class="people-info">
        <view class="people-name">{{userName}}</view>
      </view>
    </view>
    <view class="top-area common-wrap">
      <view class="common-nav" bindtap="handlePinggu">
        <image class="common-nav-image" mode="aspectFit" src="/assets/mine-report.png"></image>
        <text>评估报告</text>
        <image class="common-nav-indicator" src="/assets/indicator.svg"></image>
      </view>
      <view class="common-nav" bindtap="gotoCalendar">
        <image class="common-nav-image" mode="aspectFit" src="/assets/mine-scheme.png"></image>
        <text>我的课表</text>
        <image class="common-nav-indicator" src="/assets/indicator.svg"></image>
      </view>
      <view class="common-nav" bindtap="gotoExeData">
        <image class="common-nav-image" mode="aspectFit" src="/assets/mine-data.png"></image>
        <text>康复训练数据</text>
        <image class="common-nav-indicator" src="/assets/indicator.svg"></image>
      </view>
    </view>
    <view class="middle-area common-wrap">
      <view class="common-nav">
        <image class="common-nav-image" mode="aspectFit" src="/assets/mine-fish.png"></image>
        <text>使用鱼眼镜头</text>
        <switch color="#16B297" checked="{{true}}"/>
      </view>
      <view class="common-nav" bindtap="handleMusic">
        <image class="common-nav-image" mode="aspectFit" src="/assets/mine-music.png"></image>
        <text>背景音乐</text>
        <image class="common-nav-indicator" src="/assets/indicator.svg"></image>
      </view>
    </view>
    <view class="bottom-area common-wrap">
      <view class="common-nav" bindtap="showUserContract">
        <image class="common-nav-image" mode="aspectFit" src="/assets/mine-contact.png"></image>
        <text>协议与条款</text>
        <image class="common-nav-indicator" src="/assets/indicator.svg"></image>
      </view>
    </view>
  </view>
  <auth id='auth'></auth>
  <toast id='toast'></toast>
</view>
